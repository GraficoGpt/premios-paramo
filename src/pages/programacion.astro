    <!-- JavaScript -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Tab functionality for desktop
        const tabButtons = document.querySelectorAll('[id^="tab-"]');
        const scheduleContents = document.querySelectorAll(".schedule-content");

        function showTab(dayId: string) {
          // Hide all schedule contents
          scheduleContents.forEach((content) => {
            content.classList.add("hidden");
          });

          // Remove active state from all tabs
          tabButtons.forEach((tab) => {
            tab.classList.remove("border-green-700", "text-green-700");
            tab.classList.add("border-transparent", "text-gray-500");
            tab.removeAttribute("aria-current");
          });

          // Show selected schedule content
          const selectedContent = document.getElementById("schedule-" + dayId);
          if (selectedContent) {
            selectedContent.classList.remove("hidden");
          }

          // Set active state for selected tab
          const selectedTab = document.getElementById("tab-" + dayId);
          if (selectedTab) {
            selectedTab.classList.remove("border-transparent", "text-gray-500");
            selectedTab.classList.add("border-green-700", "text-green-700");
            selectedTab.setAttribute("aria-current", "page");
          }
        }

        // Add click event to tab buttons
        tabButtons.forEach((tab) => {
          tab.addEventListener("click", (event) => {
            const dayId = (event.currentTarget as HTMLElement).id.replace(
              "tab-",
              ""
            );
            showTab(dayId);
          });
        });

        // Mobile dropdown functionality
        const daySelect = document.getElementById("day-select");
        if (daySelect) {
          daySelect.addEventListener("change", function () {
            const selectElement = this as HTMLSelectElement;
            showTab(selectElement.value);
          });
        }

        // Initialize with Monday selected
        showTab("monday");
      });
    </script>
