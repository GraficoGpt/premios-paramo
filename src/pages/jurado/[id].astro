---
import FichaProyecto from "../../components/FichaProyecto.tsx";
export const prerender = false;
const { id } = Astro.params as { id: string };
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <main class="max-w-3xl mx-auto bg-white p-6 rounded shadow">
    <button
      onclick="history.back()"
      class="px-4 py-2 rounded-md bg-gray-200 hover:bg-gray-300 text-sm text-gray-800"
    >
      ‚Üê Volver
    </button>
    <h1 class="text-2xl font-bold mb-6">Ficha del Proyecto</h1>
    <FichaProyecto id={id} client:load />
  </main>
</Layout>
