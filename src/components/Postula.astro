---
import Button from "./Button.astro";
---

<section class="bg-gradient-to-r from-[#191300] to-[#6D5500] py-24">
  <div class="container mx-auto grid grid-cols-1 lg:grid-cols-[.5fr_1fr]">
    <div class="flex justify-center">
      <!-- Imagen simple -->
      <img
        src="/src/assets/img/premio-pluma.png"
        alt="Texto embebido visualmente"
        class="w-[400px]"
        loading="lazy"
      />
    </div>
    <div class="">
      <div class="h-full flex flex-col justify-center items-center p-6">
        <h2
          class="text-5xl text-center leading-16 text-white font-paramo font-bold"
        >
          Postula tu proyecto a los Premios Príncipe de los Páramos y marca la
          estatuilla con tu nombre.
        </h2>
        <div class="flex justify-center flex-wrap gap-4 py-8">
          <Button
            text="Reglamento"
            type="primary"
            size="large"
            fontWeight="semibold"
          />
          <Button
            text="Postular"
            type="primary"
            size="large"
            fontWeight="semibold"
          />
        </div>
      </div>
    </div>
  </div>
</section>
