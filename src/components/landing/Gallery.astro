---
// pages/index.astro

// Lanzamiento
import foto2 from '../../assets/img/lanzamiento/1.jpg'
import foto1 from '../../assets/img/lanzamiento/2.jpg'
import foto3 from '../../assets/img/lanzamiento/3.jpg'
import foto4 from '../../assets/img/lanzamiento/4.jpg'
import foto5 from '../../assets/img/lanzamiento/5.jpg'

//Cineclub
import cine1 from '../../assets/img/cine/1.jpg'
import cine2 from '../../assets/img/cine/2.jpg'
import cine3 from '../../assets/img/cine/3.jpg'
import cine4 from '../../assets/img/cine/4.jpg'

//Lanzamiento evento
import evento from '../../assets/img/premios/1.jpg'
import evento2 from '../../assets/img/premios/2.jpg'
import evento3 from '../../assets/img/premios/3.jpg'
import evento4 from '../../assets/img/premios/4.jpg'
import evento5 from '../../assets/img/premios/5.jpg'
import evento6 from '../../assets/img/premios/6.jpg'

import GalleryCard from '../../components/gallery/GalleryCard.tsx'

const imageSet1 = [foto1.src, foto2.src, foto3.src, foto4.src, foto5.src]

const imageSet2 = [cine1.src, cine2.src, cine3.src, cine4.src]

const imageSet3 = [
  evento.src,
  evento2.src,
  evento3.src,
  evento4.src,
  evento5.src,
  evento6.src,
]
---

<section id="gallery" class="bg-gray-50 py-16 md:py-24">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="mx-auto mb-12 max-w-3xl text-center md:mb-16">
      <h2 class="mb-4 text-3xl font-bold text-gray-900 md:text-4xl">Galería</h2>
      <p class="text-lg text-gray-600">Últimos eventos</p>
    </div>

    <div
      class="grid grid-cols-1 items-center gap-6 md:grid-cols-1 lg:grid-cols-3"
    >
      <GalleryCard
        images={imageSet3}
        title="Lanzamiento Premios Príncipe de los Páramos"
        client:load
      />
      <GalleryCard
        images={imageSet1}
        title="Presentación en FICCO"
        client:load
      />
      <GalleryCard
        images={imageSet2}
        title="Cine Club en Guadalupe, Santander"
        client:load
      />
    </div>
  </div>
</section>
