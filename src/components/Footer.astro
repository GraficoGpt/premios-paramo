---
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <body class="bg-black text-black">
    <!-- Footer Completo -->
    <footer class="bg-offBlack border-t border-gold/30">
      <!-- Sección Principal del Footer -->
      <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Columna 1: Acerca de -->
          <div class="">
            <div class="mb-6">
              <h2 class="text-xl font-bold text-gold mb-2">
                Premios Príncipe de los Páramos
              </h2>
              <p class="text-black/70 text-sm">
                Celebrando y promoviendo la biodiversidad de Colombia a través
                del arte audiovisual desde 2025.
              </p>
            </div>

            <div class="mb-6">
              <h3 class="text-sm font-semibold text-black/90 mb-3">Contacto</h3>
              <ul class="space-y-2 text-sm">
                <li class="flex items-start">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 text-gold mr-2 flex-shrink-0"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span class="text-black/70"
                    >Calle 21 #4-31, Bogotá, Colombia</span
                  >
                </li>
                <li class="flex items-start">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 text-gold mr-2 flex-shrink-0"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                  <span class="text-black/70"
                    >info@premiosprincipedelosparamos.co</span
                  >
                </li>
                <li class="flex items-start">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 text-gold mr-2 flex-shrink-0"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                  <span class="text-black/70">+57 310 780 5883</span>
                </li>
              </ul>
            </div>
          </div>
          <!-- Columna 3: Redes Sociales -->
          <div>
            <h3 class="text-sm font-semibold text-black/90 mb-4">Síguenos</h3>
            <div class="flex flex-wrap gap-3 mb-6">
              <a
                href="https://facebook.com/premiosprincipedelosparamos"
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-black/40 rounded-full flex items-center justify-center border border-gold/30 hover:bg-gold/20 transition-colors"
                aria-label="Facebook"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 text-gold"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
                  ></path>
                </svg>
              </a>
              <a
                href="https://instagram.com/premiosprincipedelosparamos"
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-black/40 rounded-full flex items-center justify-center border border-gold/30 hover:bg-gold/20 transition-colors"
                aria-label="Instagram"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 text-gold"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
