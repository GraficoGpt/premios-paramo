---
import colonia from '../assets/logos/colonia.svg'
import corazon from '../assets/logos/corazon.svg'
import red from '../assets/logos/red.svg'
import simon from '../assets/logos/simon.svg'
import Layout from '../layouts/Layout.astro'

import { Image } from 'astro:assets'

const supportEntities = [
  {
    name: 'Red Colombiana de Escritores Audiovisuales',
    logo: red,
    link: 'https://redescritores.com/',
  },
  {
    name: 'La Colonia Films',
    logo: colonia,
    link: 'https://www.lacoloniafilms.com/',
  },
  {
    name: 'Fundación Corazón de Selva',
    logo: corazon,
    link: 'https://www.instagram.com/corazondeselvacol/',
  },
  {
    name: 'Los amigos de Simón',
    logo: simon,
    link: 'https://www.instagram.com/losamigosdesimon/',
  },
]

// Enlaces importantes (modifica aquí los enlaces)
const importantLinks = [
  {
    label: 'Acerca de',
    href: '/acerca',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.655 6.879 1.804M15 11a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`,
  },
  {
    label: 'Reglamento Oficial',
    href: '/pdf/reglamento.pdf',
    target: '_blank',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>`,
  },
  {
    label: 'Transparencia',
    href: '/transparencia',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  },
  {
    label: 'Postular Proyecto',
    href: '/proyecto',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>`,
  },
  {
    label: 'Programación',
    href: '/programacion',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>`,
    extra: '<span class="text-gold ml-1 text-xs">(Pronto)</span>',
  },
  {
    label: 'Acceso Jurado',
    href: '/jurado',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`,
  },
]
---

<Layout>
  <footer class="border-t border-black">
    <div
      class="container mx-auto grid grid-cols-1 gap-8 px-4 py-12 sm:grid-cols-3"
    >
      <div class="columna-1">
        <h2 class="text-gold mb-2 text-xl font-bold">
          Premios Príncipe de los Páramos
        </h2>
        <div>
          <h3 class="mb-4 text-sm font-semibold text-black/90">Síguenos</h3>
          <div class="flex flex-wrap gap-3">
            <a
              href="https://instagram.com/principedelosparamos"
              target="_blank"
              rel="noopener noreferrer"
              class="border-gold/30 hover:bg-gold/20 flex h-10 w-10 items-center justify-center rounded-full border bg-black/40 transition-colors"
              aria-label="Instagram"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="text-gold h-5 w-5"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <div class="columna-3">
        <h3 class="mb-4 text-sm font-semibold text-black/90">
          Enlaces Importantes
        </h3>
        <ul class="space-y-3">
          {
            importantLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-gold flex items-center text-black/70 transition-colors"
                  {...(link.target
                    ? { target: link.target, rel: 'noopener noreferrer' }
                    : {})}
                >
                  <span set:html={link.icon} />
                  {link.label}
                  {link.extra ? <span set:html={link.extra} /> : null}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="columna-2">
        <h3 class="mb-4 text-sm font-semibold text-black/90">
          Entidades que Apoyan
        </h3>
        <div class="flex flex-wrap gap-4">
          {
            supportEntities.map((entity) => (
              <a
                href={entity.link}
                target="_blank"
                rel="noopener noreferrer"
                class="flex h-16 items-center justify-center rounded-md bg-white/10 p-3 transition-colors hover:bg-white/20"
                title={entity.name}
              >
                <Image
                  src={entity.logo}
                  alt={entity.name}
                  class="max-h-full min-h-32"
                />
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Sección Legal -->
    <div class="border-gold/20 border-t">
      <div class="container mx-auto px-4 py-6">
        <div class="flex flex-col items-center justify-between md:flex-row">
          <div class="mb-4 text-sm text-black/50 md:mb-0">
            © 2025 Premios Príncipe de los Páramos. Todos los derechos
            reservados.
          </div>
          <div class="flex flex-wrap gap-4">
            <a
              href="/pdf/politica-de-datos.pdf"
              class="hover:text-gold text-sm text-black/50 transition-colors"
              target="_blank"
              rel="noopener noreferrer">Política de Privacidad</a
            >
            <a
              href="https://www.linkedin.com/in/wmorenov/"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-gold text-sm text-black/50 transition-colors"
              >Desarrollado por: William Moreno</a
            >
          </div>
        </div>
      </div>
    </div>
  </footer>
</Layout>
