---
const props = Astro.props

const { title, description, url } = props
---

<div class="grid grid-rows-[auto_1fr_auto] rounded-lg border p-5 shadow-lg">
  <div class="mb-3 flex items-start justify-between">
    <h3 class="text-goldlight-700 text-lg font-semibold">
      {title}
    </h3>
  </div>

  <p class="mb-4 line-clamp-3 text-sm text-black/70">
    {description}
  </p>

  <div class="flex items-center justify-between">
    <a
      href={url}
      class="hover:text-bold inline-flex items-center transition-colors"
      target="_blank"
      rel="noopener noreferrer"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="mr-1 h-5 w-5"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z"
          clip-rule="evenodd"></path>
      </svg>
      Ver documento
    </a>
  </div>
</div>
